<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.presentation.ui.MainActivity"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textStyle="bold"
            android:text="Login and Chatting"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:background="@color/md_red_200"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btn_youtube_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textStyle="bold"
            android:text="Youtube Player"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:background="@color/md_red_200"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btn_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textStyle="bold"
            android:text="Other"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:background="@color/md_blue_400"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</layout>